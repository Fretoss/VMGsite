@model IEnumerable<VMGsite.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<style>
    /* Общий стиль */
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
    }

    /* Шапка */
    .header {
        background-color: #fff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        padding: 15px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .logo {
        font-size: 24px;
        font-weight: bold;
        color: #002f34;
    }

    /* Улучшенный поиск */
    .search-bar {
        flex: 1;
        display: flex;
        justify-content: center;
        position: relative;
        max-width: 400px;
    }

    .search-bar input {
        width: 100%;
        padding: 10px 40px 10px 15px;
        border: 2px solid #ccc;
        border-radius: 25px;
        font-size: 16px;
        outline: none;
        transition: 0.3s;
    }

        .search-bar input:focus {
            border-color: #002f34;
            box-shadow: 0 0 5px rgba(0, 47, 52, 0.3);
        }

    .search-bar button {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        border: none;
        background: none;
        cursor: pointer;
        font-size: 18px;
        color: #002f34;
        transition: 0.3s;
    }

        .search-bar button:hover {
            color: #004f5e;
        }

    /* Основной контейнер */
    .container {
        max-width: 1200px;
        margin: 20px auto;
        padding: 0 15px;
    }

    /* Список товаров */
    .product-list {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        justify-content: space-between;
    }

    .product-item {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        padding: 15px;
        text-align: center;
        width: calc(33.333% - 15px);
    }

        .product-item img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
        }

        .product-item h2 {
            font-size: 18px;
            margin: 10px 0;
            color: #002f34;
        }

        .product-item p {
            font-size: 16px;
            color: #666;
        }

        .product-item a {
            display: inline-block;
            margin-top: 10px;
            padding: 8px 12px;
            background-color: #002f34;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }

    /* Футер */
    .footer {
        background-color: #002f34;
        color: white;
        text-align: center;
        padding: 20px;
        margin-top: 40px;
    }

        .footer a {
            color: #00aaff;
            text-decoration: none;
            font-weight: bold;
        }

    /* Сообщение "Ничего не найдено" */
    .no-results {
        text-align: center;
        font-size: 18px;
        color: #666;
        margin-top: 20px;
    }
</style>

<!-- Шапка -->
<div class="header">
    <div class="logo">Avito Clone</div>
    <div class="search-bar">
        <form action="/Products/Index" method="get">
            <input type="text" name="query" placeholder="🔍 Найдите товары..." value="@Context.Request.Query["query"]" />
            <button type="submit">🔍</button>
        </form>
    </div>
</div>

<!-- Основной контент -->
<div class="container">
    <h1>Товары</h1>

    @if (!Model.Any())
    {
            <p class="no-results">❌ Ничего не найдено. Попробуйте другой запрос.</p>
    }
    else
    {
            <div class="product-list">
            @foreach (var product in Model)
            {
                        <div class="product-item">
                            <img src="@product.ImageUrl" alt="@product.Name" />
                            <h2>@product.Name</h2>
                            <p>Цена: $@product.Price</p>
                            <a href="/Products/Details?name=@product.Name">Подробнее</a>
                        </div>
            }
            </div>
    }
</div>

<!-- Футер -->
<div class="footer">
    <p>&copy; 2025 Avito Clone. Все права защищены.</p>
    <p>
        Связь:
        <a href="mailto:your-email@example.com">your-email@example.com</a> |
        <a href="https://github.com/your-repository" target="_blank">GitHub</a>
    </p>
</div>
